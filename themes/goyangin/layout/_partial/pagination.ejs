
<% if(page.prev || page.next) { %>
    <section class="d-flex justify-between my-8" >
        <button
                class="button"
                style="border-radius: 24px"
                onclick="pagination.onclickPage(`<%= url_for(page.prev_link) %>`)"
                <%- page.prev === 0 ? 'disabled' : ""%>
        >
            <span>
                <i class="fas fa-angle-left"></i>
                <span class="mr-2"></span>
                上一页
            </span>
        </button>

        <div class="d-flex" style="width: 100%">
            <div style="width: 100%; height: 1px"></div>
            <div class="mx-1 d-flex ">
                <span><%= page.current %></span>
                <span class="mx-1">/</span>
                <span><%= page.total %></span>
            </div>
            <div style="width: 100%; height: 1px"></div>
        </div>

        <button
                class="button"
                style="border-radius: 24px"
                onclick="pagination.onclickPage(`<%= url_for(page.next_link) %>`)"
                <%- page.next === 0 ? 'disabled' : ""%>
        >
            <span>
                下一页
                <span class="mr-2"></span>
                <i class="fas fa-angle-right"></i>
            </span>
        </button>
    </section>
<% } %>

<script>
    class Pagination extends Blog{
        constructor() {
            super();
            // ...
        }

        onclickPage (url) {
            this.createALink(url + '#home-post-list', '_self')
        }
    }

    const pagination = new Pagination();
</script>