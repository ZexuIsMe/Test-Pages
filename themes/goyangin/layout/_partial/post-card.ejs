<!-- 文章预览时用 -->
<section class="post-card box mbl py-6">
    <div class="subtitle">
        <span style="color: #adadad; font-size: 0.875rem"><%= item.date %></span>
    </div>
    <div class="title is-5">
        <%= item.title %>
    </div>

    <div style="max-height: 300px; overflow-y: hidden; cursor: pointer;" class="content">
        <%- item.excerpt || '没有摘要，点进来看看吧' %>
    </div>

    <div class="post-card-mask d-flex justify-center align-end">
        <a class="py-4 " href="<%- url_for(item.path) %>">
            <span style="color: #00586d">加载更多</span>
        </a>
    </div>
</section>

<style>
    .post-card {
        width: 100%;
        min-width: 300px;
        border-radius: 36px;
        overflow: hidden
    }
    .post-card-mask {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: transparent;
    }
</style>