    </video>
    <div id="bhcyl-bg-gradient"></div>
</div>


<style>
    #bhcyl-bg {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-image: url('<%= url_for('img/bhcyl/狐狸v0.19.jpg') %>');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
