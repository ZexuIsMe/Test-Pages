<div class="index-img" style="width: 100%; height: 100vh; position: relative">
    <div class="index-mask"></div>
    <div class="v-absolute-center">
        <figure>
            <img src="/logo/高清Logo/透明底logo.png" alt="logo"  style="max-height: 1080px"/>
        </figure>
    </div>
    <div class="index-down">
        <span style="font-size: 48px; width: fit-content" class="text-white">
            <i class="fas fa-angle-double-down" onclick="indexBackgroundEjs.onclickDown()"></i>
        </span>
    </div>

    <%- partial('_partial/component/loading', { item: { loadingId: 'indexLoading' } }) %>
</div>

<script>
    const indexBackgroundEjs = {
        blog: new Blog(),

        onclickDown () {
            const blog = indexBackgroundEjs.blog

            blog.createALink('#home-post-list', '_self')
        },

        onload () {
            const blog = indexBackgroundEjs.blog
            blog.imagesHideLoading(`<%- url_for('img/home/DSC_0011.JPG') %>`, 'indexLoading')
        }
    }

    indexBackgroundEjs.onload()
</script>

<style>
    .index-img {
        background-image: url("<%- url_for('img/home/DSC_0011.JPG') %>");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .index-mask {
        width: 100%;
        height: 100%;
        background: linear-gradient(
                to bottom,
                transparent,
                transparent,
                transparent,
                transparent,
                #686868
        )
    }

    .index-down {
        position: absolute;
        bottom: 50px;
        left: 0;
        width: 100%;
    }

    .index-down span {
        position: absolute;
        top: -3rem;
        left: 50%;
        transform: translateX(-50%);
        animation: index-down-animation 1.5s linear infinite;
    }

    @keyframes index-down-animation {
        0% {
            top: -3rem;
        }
        50% {
            top: 0;
        }
        100% {
            top: -3rem;
        }
    }
</style>